<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/ly1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:text="欢迎使用ShareBook"
            android:textSize="25sp"
            android:textColor="#000000"
            />

        <TextView
            android:id="@+id/txt_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="请登录"

            />



    </LinearLayout>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/editText_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:hint="用户名"
        android:inputType="textPersonName"
        app:met_baseColor="#000"
        app:met_clearButton="true"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="用户名"
        app:met_maxCharacters="12"
        app:met_primaryColor="@color/light_blue_500"
        android:layout_below="@+id/ly1"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/editText_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="密码"
        android:inputType="textPassword"
        app:met_baseColor="#000"
        app:met_clearButton="true"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="密码"
        app:met_maxCharacters="10"
        app:met_primaryColor="@color/light_blue_500"
        android:layout_below="@+id/editText_username"
        />


    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_password"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:alpha="1"
        android:text="登录"
        android:textSize="18sp"
        android:textColor="@color/bg_white"
        android:enabled="false"
        android:background="@drawable/login_button"
        />
    <Button
        android:id="@+id/visitor_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_login"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:alpha="1"
        android:text="游客登录"
        android:textSize="18sp"
        android:textColor="@color/bg_white"
        android:background="@drawable/login_button"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/visitor_login"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >
        <Button
            android:id="@+id/signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textColor="@color/light_blue_500"
            android:background="@null"
            android:layout_alignParentLeft="true"
            />

        <Button
            android:id="@+id/losepwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码？"
            android:textColor="@color/black_text"
            android:background="@null"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

</RelativeLayout>