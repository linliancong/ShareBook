<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/about"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="96dp"
        />
    <TextView
        android:id="@+id/about_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about"
        android:layout_centerHorizontal="true"
        android:text="ShareBook"
        android:textSize="18sp"
        android:textColor="@color/black_text"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/about_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_title"
        android:layout_centerHorizontal="true"
        android:text="版本 1.0.111"
        android:textSize="12sp"
        android:textStyle="italic"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/setting_txt_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_version"
        android:layout_centerHorizontal="true"
        android:text="         主要应用于帮助大家馆藏分类，家里藏书很多的时候，有时就想统计一下家里的藏书，或者将藏书分类摆放易于查找。同时如果有的书已经脱销或者不再版，你在圈子里发现谁馆藏有这本书，就可以提出借阅的请求。"
        android:textSize="12sp"
        android:textStyle="italic"
        android:layout_margin="20dp"
        />

    <TextView
        android:id="@+id/about_banq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="版权所有 © ShareBook有限公司保留一切权利"
        android:textSize="10sp"
        android:layout_marginBottom="30dp"

        />

</RelativeLayout>