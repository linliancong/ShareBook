<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:id="@+id/message_txt_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/message_text"
        >

        <TextView
            android:id="@+id/message_item_txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="问题反馈"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            />

        <TextView
            android:id="@+id/message_item_txt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12月25日"
            android:textSize="12sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="5dp"
            android:layout_below="@+id/message_item_txt1"
            />
        <TextView
            android:id="@+id/message_item_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="风萧萧兮易水寒，壮士一去兮不复还。"
            android:textColor="@color/black"
            android:padding="10dp"
            android:layout_below="@+id/message_item_txt2"
            />

    </RelativeLayout>



</RelativeLayout>